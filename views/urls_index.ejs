<html lang="en">
<% include ./partials/_header %>
  <head>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>Tiny App!</title>
  </head>
  <body>
    <div class="container">
      <h2>Welcome Back <%= user['email'] %></h2>
      <p>Make changes to your URL's</p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Original URL</th>
            <th>Short URL</th>
            <th>Update</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>

<% for (var item in urls) { %>

          <tr>
            <td><a href="<%= urls[item] %>"><%= urls[item] %> </a></td>
            <td><a href="<%= urls[item] %>"><%= item %> </a></td>
            <td><form method = "GET" action = "/urls/<%= item %>/">
            <button type = "submit" value="Update" class="btn btn-warning"">Update<span class="glyphicon glyphicon-refresh"></span></button>
            </form></td>
            <td><form method="POST" action="/urls/<%= item %>/delete">
            <button type="submit" value="delete" name="<%= item %>" class="btn btn-danger"> Delete<span class="glyphicon glyphicon-trash"></span></button>
            </form></td>
          </tr>
    </div>

    <% } %>
        </tbody>
      </table>

    <div>
      <a href="/urls/new" class="btn btn-success"">Do you want to shorten your URL? Click me</a>
    </div>

</body>
</html>
